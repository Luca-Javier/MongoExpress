<div class="card card-body p-4 rounded-0 bg-dark text-white container col-6">

  <h1>Update a Task</h1>

  <form action="/tasks/{{task._id}}/edit" method="POST">
    <input
      type="text"
      name="title"
      placeholder="Title"
      value="{{task.title}}"
      class="form-control rounded-0 bg-dark text-white my-3"
    />

    <textarea
      name="description"
      id="description"
      placeholder="Write a description..."
      class="form-control rounded-0 bg-dark text-white mb-3"
    >{{task.description}}</textarea>

    <button class="btn btn-primary">Update</button>
  </form>

</div>
