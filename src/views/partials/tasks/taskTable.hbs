{{#if tasks}}

  <table class="table table-dark table-bordered table-hover bg-dark text-white">
    <thead>
      <tr>
        <th>N.</th>
        <th>Title</th>
        <th>Description</th>
        <th>Operation</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td>{{title}}</td>
          <td>{{description}}</td>
          <td>

            {{#if done}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-dark"
              >Undone</a>
            {{else}}
              <a
                href="/tasks/{{_id}}/toggleDone"
                class="btn btn-success"
              >Done</a>
            {{/if}}
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">Update</a>
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">Delete</a>
          </td>
        </tr>

      {{/each}}
    </tbody>
  </table>

{{else}}
  <div class="text-center text-white"><h3>No Tasks</h3>
    <img src="/empty.png" alt="no tasks" />
  </div>
{{/if}}
